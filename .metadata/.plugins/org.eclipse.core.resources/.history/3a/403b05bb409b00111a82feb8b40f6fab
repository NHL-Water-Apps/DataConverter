import java.awt.Dimension;
import javax.swing.*;
/**
 * De class die alles omtrent de graphical window regelt en tevens entry point van de applicatie.
 *  
 * @author Marten Schilstra <info@martndemus.nl>
 */
public class MainWindow {
	
	private static JFrame mainWindow;
	private static String mainWindowTitle = "Data Converter voor Water Apps" ;
	
	private static final Dimension WINDOW_SIZE = new Dimension(800, 600);
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {	
		initMainWindow();
	}
	
	/**
	 * @return De grootte van de MainWindow als een Dimension object.
	 */
	public static Dimension GetWindowSize() {
		return WINDOW_SIZE;
	}
	
	/**
	 * @return De titel van de MainWindow.
	 */
	public static String GetWindowTitle() {
		return mainWindowTitle;
	}
	
	/**
	 * @param title Een string die de titel van de MainWindow moet worden.
	 */
	public static void SetWindowTitle(String title) {
		mainWindowTitle = title;
		mainWindow.setTitle(title);
	}
	
	/**
	 * Initialiseert de MainWindow.
	 */
    private static void initMainWindow() {
    	mainWindow = new JFrame(mainWindowTitle);
    	mainWindow.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
    	mainWindow.setMinimumSize(WINDOW_SIZE);
    	mainWindow.setResizable(false);
         
    	mainWindow.pack();
    	mainWindow.setVisible(true);
    }
}
